<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="font_size"
        android:title="글자 크기"
        android:entries="@array/font_size_labels"
        android:entryValues="@array/font_size_values"
        android:defaultValue="16sp"
        android:summary="기본 글자 크기 설정"/>

    <ListPreference
        android:key="font_family"
        android:title="글자 폰트"
        android:entries="@array/font_family_labels"
        android:entryValues="@array/font_family_values"
        android:defaultValue="sans-serif"
        android:summary="기본 글자 폰트 설정"/>

</PreferenceScreen>
